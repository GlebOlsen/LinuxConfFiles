{
    "telemetry.telemetryLevel": "off",
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#b3ff00",
        "editor.lineHighlightBackground": "#200020",
        "editor.lineHighlightBorder": "#ff00ff",
        "editorLineNumber.foreground": "#ffffff",
        "editorLineNumber.activeForeground": "#ff0000",
        "editorGutter.background": "#414339",
        "editorIndentGuide.activeBackground1": "#b3ff00",
        "editorIndentGuide.background1": "#707070",
        "scrollbarSlider.background": "#b3ff0020",
        "scrollbarSlider.hoverBackground": "#00ffff40",
        "jumpy2.labelFontColor": "#000000",
        "jumpy2.labelBackgroundColor": "#b3ff00",
        "jumpy2.labelBorderColor": "#00ff54",
        "widget.shadow": "#b3ff00",
        "editorGutter.modifiedBackground": "#00ffff",
        "editorGutter.addedBackground": "#00ff00",
        "editorGutter.deletedBackground": "#ff0000",
    },
    "editor.tokenColorCustomizations": {
        "comments": "#8f8669",
        "textMateRules": [
            {
                "scope": [
                    "comment",
                    "comment.block",
                    "comment.block.documentation",
                    "comment.line",
                    "constant",
                    "constant.character",
                    "constant.character.escape",
                    "constant.numeric",
                    "constant.numeric.integer",
                    "constant.numeric.float",
                    "constant.numeric.hex",
                    "constant.numeric.octal",
                    "constant.other",
                    "constant.regexp",
                    "constant.rgb-value",
                    "emphasis",
                    "entity",
                    "entity.name",
                    "entity.name.class",
                    "entity.name.function",
                    "entity.name.method",
                    "entity.name.section",
                    "entity.name.selector",
                    "entity.name.tag",
                    "entity.name.type",
                    "entity.name.namespace",
                    "entity.other",
                    "entity.other.attribute-name",
                    "entity.other.inherited-class",
                    "invalid",
                    "invalid.deprecated",
                    "invalid.illegal",
                    "keyword",
                    "keyword.control",
                    "keyword.operator",
                    "keyword.operator.new",
                    "keyword.operator.assignment",
                    "keyword.operator.arithmetic",
                    "keyword.operator.logical",
                    "keyword.other",
                    "markup",
                    "markup.bold",
                    "markup.changed",
                    "markup.deleted",
                    "markup.heading",
                    "markup.inline.raw",
                    "markup.inserted",
                    "markup.italic",
                    "markup.list",
                    "markup.list.numbered",
                    "markup.list.unnumbered",
                    "markup.other",
                    "markup.quote",
                    "markup.raw",
                    "markup.underline",
                    "markup.underline.link",
                    "meta",
                    "meta.block",
                    "meta.cast",
                    "meta.class",
                    "meta.function",
                    "meta.function-call",
                    "meta.preprocessor",
                    "meta.return-type",
                    "meta.selector",
                    "meta.tag",
                    "meta.type.annotation",
                    "meta.type",
                    "punctuation.definition.string.begin",
                    "punctuation.definition.string.end",
                    "punctuation.separator",
                    "punctuation.separator.continuation",
                    "punctuation.terminator",
                    "storage",
                    "storage.modifier",
                    "storage.type",
                    "string",
                    "string.interpolated",
                    "string.other",
                    "string.quoted",
                    "string.quoted.double",
                    "string.quoted.other",
                    "string.quoted.single",
                    "string.quoted.triple",
                    "string.regexp",
                    "string.unquoted",
                    "strong",
                    "support",
                    "support.class",
                    "support.constant",
                    "support.function",
                    "support.other",
                    "support.type",
                    "support.type.property-name",
                    "support.variable",
                    "variable",
                    "variable.language",
                    "variable.name",
                    "variable.other",
                    "variable.other.readwrite",
                    "variable.parameter"
                ],
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },
    "editor.showFoldingControls": "always",
    "editor.wordWrap": "on",
    "editor.cursorStyle": "block",
    "zenMode.hideLineNumbers": false,
    "editor.glyphMargin": false,
    "editor.folding": false,
    "editor.lineDecorationsWidth": 8,
    "workbench.iconTheme": "material-icon-theme",
    "window.menuBarVisibility": "toggle",
    "editor.scrollbar.verticalScrollbarSize": 22,
    "editor.scrollbar.horizontal": "auto",
    "currentPath.useAbsolutePath": true,
    "extensions.ignoreRecommendations": true,
    // FONT SETTINGS:
    "editor.fontFamily": " 'Cartograph CF','FiraCode Nerd Font', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.minimap.enabled": false,
    "window.density.editorTabHeight": "compact",
    "workbench.tree.indent": 10,
    "workbench.sideBar.location": "right",
    "editor.stickyScroll.enabled": false,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "expand",
    "editor.smoothScrolling": true,
    "breadcrumbs.enabled": false,
    "window.commandCenter": false,
    "editor.renderLineHighlight": "all",
    "editor.renderLineHighlightOnlyWhenFocus": true,
    "editor.renderWhitespace": "boundary",
    "chat.commandCenter.enabled": false,
    "editor.guides.highlightActiveIndentation": "always",
    "jumpy2.checkered.active": false,
    "jumpy2.achievements.active": false,
    "workbench.colorTheme": "Monokai",
    "workbench.layoutControl.enabled": false,
    "workbench.activityBar.location": "hidden", // Remember center command palette
}
