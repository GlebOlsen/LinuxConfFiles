// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+space ctrl+enter",
        "command": "workbench.action.toggleActivityBarVisibility"
    },
    {
        "key": "ctrl+shift+9",
        "command": "workbench.action.zoomReset"
    },
    {
        "key": "ctrl+numpad0",
        "command": "-workbench.action.zoomReset"
    },
    {
        "key": "ctrl+alt+oem_2",
        "command": "toggleVim"
    },
    {
        "key": "ctrl+u",
        "command": "cursorMove",
        "args": {
            "to": "up",
            "by": "line",
            "value": 14
        },
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+d",
        "command": "cursorMove",
        "args": {
            "to": "down",
            "by": "line",
            "value": 14
        },
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+d",
        "command": "-notebook.addFindMatchToSelection",
        "when": "config.notebook.multiCursor.enabled && notebookCellEditorFocused && activeEditor == 'workbench.editor.notebook'"
    },
    {
        "key": "ctrl+d",
        "command": "-editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+u",
        "command": "-cursorUndo",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+alt+space ctrl+alt+enter",
        "command": "workbench.action.toggleStatusbarVisibility"
    },
    {
        "key": "ctrl+shift+4",
        "command": "workbench.action.splitEditor"
    },
    {
        "key": "ctrl+oem_5",
        "command": "-workbench.action.splitEditor"
    },
    {
        "key": "ctrl+j ctrl+l",
        "command": "editor.action.joinLines"
    },
    {
        "key": "shift+alt+oem_plus",
        "command": "workbench.action.increaseViewSize"
    },
    {
        "key": "shift+alt+oem_minus",
        "command": "workbench.action.decreaseViewSize"
    }
]