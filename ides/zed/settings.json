// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	"outline_panel": {
		"button": false
	},
	"collaboration_panel": {
		"button": false
	},
	"vim_mode": false,
	"agent": {
		"play_sound_when_agent_done": true,
		"default_profile": "write",
		"default_model": {
			"provider": "ollama",
			"model": "phi4-mini:latest"
		},
		"model_parameters": [],
		"dock": "left",
		"version": "2"
	},
	"git_panel": {
		"dock": "right"
	},
	"project_panel": {
		"dock": "right"
	},
	"telemetry": {
		"metrics": false,
		"diagnostics": false
	},
	"ui_font_size": 16,
	"buffer_font_size": 16,
	"ui_font_family": "Fira Code",
	"buffer_font_family": "Fira Code",
	"relative_line_numbers": true,
	"soft_wrap": "editor_width",
	"cursor_shape": "block",
	"hard_tabs": true,
	"tab_size": 4,
	"toolbar": {
		"quick_actions": false
	},
	"theme": {
		"mode": "system",
		"light": "Ayu Mirage",
		"dark": "One Dark"
	},
	"title_bar": {
		"show_sign_in": false,
		"show_onboarding_banner": false,
		"show_branch_icon": false
	},
	"experimental.theme_overrides": {
		"players": [
			{
				"cursor": "#b3ff00"
			}
		],
		"background.appearance": "blurred",
		"background": "#09090b77",
		"panel.background": "#00000044",
		"editor.background": "#00000044",
		"tab_bar.background": "#00000044",
		"terminal.background": "#00000044",
		"toolbar.background": "#00000044",
		"tab.inactive_background": "#00000044",
		"tab.active_background": "#3f3f4644",
		"border": "#7700ff66",
		"status_bar.background": "#09090b00",
		"title_bar.background": "#09090b77",
		"title_bar.inactive_background": "#FFA50033",
		"border.variant": "#00000000",
		"scrollbar.track.background": "#52525b20",
		"scrollbar.track.border": "#00000000",
		"scrollbar.thumb.background": "#52525b30",
		"scrollbar.thumb.border": "#00000000",
		"elevated_surface.background": "#90",
		"surface.background": "#90",
		"editor.active_line_number": "#ffffffcc",
		"editor.gutter.background": "#00000044",
		"editor.indent_guide": "#ffffff30",
		"editor.indent_guide_active": "#ffffff80",
		"editor.line_number": "#ffffffff",
		"editor.active_line.background": "#ff00ff11"
	}
}
