{
    "telemetry.telemetryLevel": "off",
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#b3ff00",
        "editor.lineHighlightBackground": "#200020",
        "editor.lineHighlightBorder": "#ff00ff",
        "editorLineNumber.foreground": "#ffffff",
        "editorLineNumber.activeForeground": "#ff0000",
        "editorGutter.background": "#002e2e",
        "editorIndentGuide.activeBackground1": "#ff0000",
        "scrollbarSlider.background": "#b3ff0020",
        "scrollbarSlider.hoverBackground": "#00ffff40",
        "jumpy2.labelFontColor": "#b3ff00ff",
        "jumpy2.labelBackgroundColor": "#aa00aa",
        "jumpy2.labelBorderColor": "#0000ff",
        "widget.shadow": "#00ffff",
        "editorGutter.modifiedBackground": "#00ffff",
        "editorGutter.addedBackground": "#00ff00",
        "editorGutter.deletedBackground": "#ff0000"
    },
    "editor.tokenColorCustomizations": {
        "comments": "#8f8669"
    },
    "editor.showFoldingControls": "always",
    "editor.wordWrap": "on",
    "editor.cursorStyle": "line",
    "zenMode.hideLineNumbers": false,
    "editor.glyphMargin": false,
    "editor.folding": false,
    "editor.lineDecorationsWidth": 8,
    "workbench.iconTheme": "material-icon-theme",
    "window.menuBarVisibility": "toggle",
    "editor.scrollbar.verticalScrollbarSize": 22,
    "editor.scrollbar.horizontal": "auto",
    "currentPath.useAbsolutePath": true,
    "extensions.ignoreRecommendations": true,
    // FONT SETTINGS:
    "editor.fontFamily": " 'Cartograph CF','FiraCode Nerd Font', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.minimap.enabled": false,
    "window.density.editorTabHeight": "compact",
    "workbench.tree.indent": 10,
    "workbench.sideBar.location": "right",
    "editor.stickyScroll.enabled": false,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "expand",
    "editor.smoothScrolling": true,
    "breadcrumbs.enabled": false,
    "window.commandCenter": false,
    "editor.cursorWidth": 4,
    "editor.renderLineHighlight": "all",
    "editor.renderLineHighlightOnlyWhenFocus": true,
    "editor.renderWhitespace": "boundary",
    "chat.commandCenter.enabled": false,
    "editor.guides.highlightActiveIndentation": "always",
    "jumpy2.checkered.active": false,
    "jumpy2.achievements.active": false,
    "workbench.colorTheme": "8-Bit Dark",
    "workbench.layoutControl.enabled": false // Remember center command palette
}