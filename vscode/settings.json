{
    "telemetry.telemetryLevel": "off",
    "workbench.startupEditor": "none",
    "workbench.sideBar.location": "right",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "eslint.validate": [
        "javascript",
    ],
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#ff00ff",
        "editor.lineHighlightBackground": "#ff00ff17",
        // "editorLineNumber.foreground": "#476600",
        "editorLineNumber.activeForeground": "#ff0000",
        "scrollbarSlider.background": "#b3ff0020",
        "scrollbarSlider.hoverBackground": "#00ffff40"
    },
    "editor.tokenColorCustomizations": {
        "comments": "#706060"
    },
    "editor.showFoldingControls": "always",
    "indentRainbow.lightIndicatorStyleLineWidth": 4,
    "indentRainbow.tabmixColor": "rgba(128,32,96,1)",
    "indentRainbow.errorColor": "rgba(128,32,32,1)",
    "indentRainbow.updateDelay": 200,
    "editor.wordWrap": "on",
    "zenMode.hideLineNumbers": false,
    "editor.glyphMargin": true,
    "glassit.alpha": 255,
    "editor.guides.bracketPairs": "active",
    "workbench.iconTheme": "material-icon-theme",
    "editor.renderLineHighlight": "all",
    "github.copilot.enable": {
        "*": true,
        "yaml": false, // Web infra
        "plaintext": false, // for `.env` files
        "json": false, // for `local.json files
        "markdown": false,  // For documentation
    },
    "window.menuBarVisibility": "toggle",
    "indentRainbow.indicatorStyle": "light",
    "editor.scrollbar.verticalScrollbarSize": 22,
    "editor.scrollbar.horizontal": "auto",
    "currentPath.useAbsolutePath": true,
    "extensions.ignoreRecommendations": true,
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "remote.SSH.remotePlatform": {
        "DevVM": "linux"
    },
    // FONT SETTINGS:
    "editor.fontFamily": "'CaskaydiaMono Nerd Font','FiraCode Nerd Font', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontSize": 15,
    // MINIMAP:
    // "editor.minimap.side": "left",
    // "editor.minimap.showSlider": "always",
    // "editor.minimap.maxColumn": 95,
    // "editor.minimap.renderCharacters": false,
    // "editor.minimap.size": "fit",
    "editor.minimap.enabled": false,
    "workbench.colorTheme": "Default Light Modern",
}
