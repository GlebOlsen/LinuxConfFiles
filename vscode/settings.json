{
    "telemetry.telemetryLevel": "off",
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#b3ff00",
        "editor.lineHighlightBackground": "#b3ff0011",
        "editor.lineHighlightBorder": "#b3ff0044",
        // "editorLineNumber.foreground": "#476600",
        "editorLineNumber.activeForeground": "#ff0000",
        "scrollbarSlider.background": "#b3ff0020",
        "scrollbarSlider.hoverBackground": "#00ffff40"
    },
    "editor.tokenColorCustomizations": {
        "comments": "#706060"
    },
    "editor.showFoldingControls": "always",
    "editor.wordWrap": "on",
    "editor.cursorStyle": "line",
    "zenMode.hideLineNumbers": false,
    "editor.glyphMargin": true,
    "workbench.iconTheme": "material-icon-theme",
    "editor.renderLineHighlight": "all",
    "window.menuBarVisibility": "toggle",
    "editor.scrollbar.verticalScrollbarSize": 22,
    "editor.scrollbar.horizontal": "auto",
    "currentPath.useAbsolutePath": true,
    "extensions.ignoreRecommendations": true,
    // FONT SETTINGS:
    "editor.fontFamily": " 'Cartograph CF','FiraCode Nerd Font', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.lineHeight": 1.5,
    "editor.minimap.enabled": false,
    "window.commandCenter": false,
    "window.density.editorTabHeight": "compact",
    "workbench.tree.indent": 10,
    "workbench.sideBar.location": "right",
    "editor.lineNumbers": "relative",
    "editor.stickyScroll.enabled": false,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "phase",
    "editor.smoothScrolling": true,
    "editor.renderWhitespace": "boundary",
    "workbench.colorTheme": "8-Bit Dark",
    "breadcrumbs.enabled": false,
    "vim.useSystemClipboard": true,
    "workbench.layoutControl.enabled": false,
    "workbench.activityBar.location": "hidden"
}
