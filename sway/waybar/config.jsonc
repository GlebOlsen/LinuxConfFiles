// -*- mode: jsonc -*-
{
    // Removing "output": "DP-1" so the bar shows on ALL three of your monitors
    "output": "DP-1",
    "margin": "8 8 0 8",
    "layer": "top",
    "position": "top", 
    "height": 30,
    "spacing": 4,

    // Modules updated from hyprland to sway
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "sway/scratchpad",
        "custom/media"
    ],
    "modules-center": [
        "sway/window"
    ],
    "modules-right": [
        "mpd",
        "idle_inhibitor",
        "pulseaudio",
        "network",
        "network#speed", // Dedicated speed module
        "custom/gpu",
        "power-profiles-daemon",
        "cpu",
        "memory",
        "temperature",
        "backlight",
        "battery",
        "battery#bat2",
        "clock",
        "tray"
    ],

    // Sway Workspaces Configuration
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{name}",
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": []
        }
    },

    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },

    "sway/window": {
        "max-length": 50
    },

    "sway/scratchpad": {
